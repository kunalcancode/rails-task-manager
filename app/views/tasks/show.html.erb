<h1><%= @task.title  %></h1>

<p><%= @task.details  %></p>
<p><%= @task.completed ? "Task is complete" : "Uncompleted task"  %></p>
<p><%= link_to "Edit task", edit_path %></p>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure babes?"}
%>

<p><%= link_to "Back to all tasks", tasks_path %></p>
